{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": [
    "clmsr-subgraph/**",
    "clmsr-sdk/**",
    "verification/**",
    "website/**",
    "artifacts/**",
    "cache/**",
    "coverage/**",
    "node_modules/**"
  ]
}
